.container
  .kpx_login
    .row.kpx_row-sm-offset-3.kpx_loginOr
      .col-xs-12.col-sm-6
        hr.kpx_hrOr
        span.kpx_spanOr
    .row.kpx_row-sm-offset-3
      .col-xs-12.col-sm-6
        form.kpx_loginForm(action='/auth/join' method='POST')
          .input-group
            span.input-group-addon
              span.fa.fa-user
            input.form-control(type='text' name='username' placeholder='ID')
          hr
          .input-group
            span.input-group-addon
              span.fa.fa-pen-nib
            input.form-control(type='text' name='nick' placeholder='nick')
          hr
          .input-group
            span.input-group-addon
              span.fa.fa-key
            input.form-control(type='password' name='password' placeholder='Password')
          hr
          button.btn.btn-lg.btn-outline-primary.btn-block(type='submit')
            i.fa.fa-sign-in
            |  Sign Up
          if joinError
            .message= joinError
    .row.kpx_row-sm-offset-3
      .col-xs-12.col-sm-3
        p
        label.custom-control.custom-checkbox
          input.custom-control-input(type='checkbox' value='remember-me')
          span.custom-control-indicator
          span.custom-control-description Remember me!
        p
      .col-xs-12.col-sm-3
      .col-lg-12
        p.text-lg-center.text-md-center.text-sm-center.text-xs-center
